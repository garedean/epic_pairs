<h1 class="page-header"><%= @user.first_name %>'s matches:</h1>

<div class="row">
  <div class="col-md-3 col-md-offset-1 matches">
    <% if @users.length().>(1) %>
      <% @users.each() do |user2| %>
        <% if @user.match(user2) == "great match" && @user != user2 %>
          <a href="/users/<%= @user.id() %>/matches/<%= user2.id %>"><%= user2.first_name() %> <%= user2.last_name() %></a>
          <br>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-8">
    <div class="profile_info">
      <hr>
      <h4 class="text-center">Profile info</h4>
      <hr>
    <% if @selected_user %>
      <img src="http://www.lorempixel.com/350/350/<%= random_image %>">

      <p><%= @selected_user.first_name %> <%= @selected_user.last_name %></p>

      <p><%= @selected_user.email %></p>

      <p><%= @selected_user.hometown %></p>

      <p><%= @selected_user.hobbies %></p>

      <p><%= @selected_user.pair_qualities %></p>

    <% end %>
    </div>
  </div>
</div>
